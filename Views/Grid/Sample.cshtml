
@{
    ViewBag.Title = "Sample";
}

@section Scripts
{
    <script type="text/javascript">
        var app = angular.module('myAppp', []);
        app.controller('custCtrl', function ($scope, $http) {
            $scope.description = "";
            $scope.setting = function (value) {
                $scope.description = value;

            }

        });
    
    
    </script>
}

<h2>Sample</h2>

<div ng-app="myAppp" ng-controller="custCtrl">
    <div class="radio">
        <label>
            <input type="radio" name="a" ng-model="x" ng-change="setting('First')"> First 
        </label>
    </div>
    <div class="radio">
        <label>
            <input type="radio" name="a">
            second
        </label>
    </div>
    <input type="hidden" value="{{$scope.description}}" />    
</div>